
    <%= form_for(:preferences, url: courseDisplay_path, method: 'get') do |p| %>
        <div class="form-group">
      <%= p.label :maxCredits, 'Maximum number of credits:' %>
      <%= p.number_field :maxCredits, min:0, max:18, class: 'form-control' %>
      <%= p.label :minCredits, 'Minumum number of credits:' %>
      <%= p.number_field :minCredits,min:0, max:18,class: 'form-control' %>
      <%= radio_button_tag(:radioPreference, "night") %>
      <%= label_tag(:night_tag, "Night schedule preferred") %>
      <%= radio_button_tag(:radioPreference, "day") %>
      <%= label_tag(:day_tag, "Day schedule preferred") %>
      <%= radio_button_tag(:radioPreference, "neutral", :checked) %>
      <%= label_tag(:neutral_tag, "No preferrence for day/night schedule") %>
      <%= label_tag("Click here to set unavailable time slots:")%>
      <%= link_to "Unavailable", timetableread_path, :class=>"btn btn-default" %>
      <%=hidden_field(:semester,:semesterInput,:value => @semesterSelection)%>
          </div>
    <%= p.submit "Done", class: "btn btn-default" %>
<% end %>